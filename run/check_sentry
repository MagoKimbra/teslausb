#!/bin/bash -eu

if [[ ( ( ! -x /root/bin/tesla_api.py) || ( ! -s /mutable/cache.json ) ) && ( -z "${TESLAFI_API_TOKEN:+x}" ) ]]
then
  log "Not keeping car awake."
  exit
fi

case "${TESLA_SENTRY_MODE:-off}" in
  on)
    is_sentry_activate=$(/root/bin/tesla_api.py is_sentry_activate | tr '[:upper:]' '[:lower:]')
    if [ "0" = "${is_sentry_activate}" ]
    then
      log "Sentry was triggered by an event."
    fi
    ;;
  off)
    ;;
  *)
    log "Unknown TESLA_SENTRY_MODE: ${TESLA_SENTRY_MODE}."
    ;;
esac
